%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      %form.sign_in
      = bootstrap_form_tag url: '/login' do |f|
        %header
          %h1 Sign in
        %fieldset
          = f.email_field :email, label: "Email Address"
          = f.password_field :password
          = f.submit "Sign In"
          = link_to "Forgot Password?", forgot_password_path
          