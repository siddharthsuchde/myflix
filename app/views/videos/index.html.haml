%article.video_category
  %header
    -@categories.each do |category|
      %br
      %h3= link_to category.name, category_path(category)
      .videos.row
        %br
        -category.recent_videos.each do |video|
          .video.col-sm-2
            = link_to image_tag(" /tmp/#{video.small_cover_url}.jpg"), video_path(video)

